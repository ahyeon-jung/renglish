{
  "scripts": {
    "dev": "concurrently -k -n client,server -c blue,green \"pnpm --filter ./client dev\" \"pnpm --filter ./server start:dev\"",
    "format": "prettier --write client/src server/src",
    "generate:api": "openapi-generator-cli generate -i ./swagger.json -g typescript-fetch -o ./client/src/services",
    "prepare": "husky"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  }
}
