{
  "name": "renglish",
  "private": true,
  "scripts": {
    "dev:client": "pnpm --filter client dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:server": "pnpm --filter server start:dev",
    "dev": "concurrently -k -n client,admin,server -c blue,green,yellow \"pnpm dev:client\" \"pnpm dev:admin\" \"pnpm dev:server\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier --write client/src server/src",
    "generate:api": "openapi-generator-cli generate -i ./swagger.json -g typescript-fetch -o ./packages/services/src/generated",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "precommit": "lint-staged",
    "vercel-build": "pnpm install --filter client && pnpm --filter client build",
    "vercel-start": "pnpm --filter client start"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
