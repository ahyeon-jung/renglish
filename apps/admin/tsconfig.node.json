{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true
  },
  "paths": {
    "@renglish/services": ["../../packages/services/src/index.ts"],
    "@renglish/services/*": ["../../packages/services/src/*"]
  },
  "include": ["vite.config.ts"],
  "references": [{ "path": "../../packages/services" }]
}
